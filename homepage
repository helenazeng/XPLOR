<script type='text/javascript'>//<![CDATA[
window.onload=function(){
document.getElementById("input-search").addEventListener("keyup", show_matches, false);

window.addEventListener("resize", show_autocomplete_div, false);

document.body.addEventListener('click', autocomplete_click_handler, false);

document.getElementById("xplor-submit").addEventListener("click",request_page,false);

function request_page(){
    if (submit_query_text === undefined){
        submit_query_text = document.getElementById("input-search").value;
        if (submit_query_text === ""){
            alert("Where are you going?");
            return;
        }
    }
    document.body.className = "gone";
    //window.location.href = "http://xplor.xyz/" + encodeURI(submit_query_text);
    alert("http://xplor.xyz/" + encodeURI(submit_query_text));
}
var submit_query_text;
function autocomplete_click_handler(evt) {
    if (evt.target.className == "autocomplete-class"){
    	submit_query_text = evt.target.innerHTML;
        request_page();
    }
    hide_autocomplete_div();
}

function show_autocomplete_div() {
    var autodiv = document.getElementById("div-autocomplete");
    autodiv.className = "showing";
    var inprect = document.getElementById("input-search").getBoundingClientRect();
    autodiv.style.left = inprect.left + "px";
    autodiv.style.top = (inprect.bottom + 1) + "px";
    autodiv.style.width = Math.max((inprect.right - inprect.left + 10), 200) + "px";
}

function hide_autocomplete_div() {
    document.getElementById("div-autocomplete").className = "hidden";
}

function show_matches() {
    var query = document.getElementById("input-search").value;
    document.getElementById("div-autocomplete").innerHTML = "";
    if (query === "") {
        hide_autocomplete_div();
        return;
    }
    var matches = find_matches(query);
    if (matches.length < 1) {
        hide_autocomplete_div();
        return;
    }
    show_autocomplete_div();
    var theTable = document.createElement('table');
    for (var i = 0, tr, td; i < matches.length; i++) {
        tr = document.createElement('tr');
        td = document.createElement('td');
        td.appendChild(document.createTextNode(matches[i]));
        td.className = "autocomplete-class";
        tr.appendChild(td);
        theTable.appendChild(tr);
    }
    document.getElementById('div-autocomplete').appendChild(theTable);
}

function find_matches(query) {
    // look through locations to find possible matches
    var matches = [];
    for (var locations_index = 0; locations_index < locations.length; locations_index++) {
        if (locations[locations_index].toLowerCase().indexOf(query.toLowerCase()) > -1) {
            // checks if query is a substring of each location
            matches.push(locations[locations_index]);
        }
        if (matches.length > 5) {
            // never show more than 5 matches
            break;
        }
    }
    return matches;
}

var locations = ["Afghanistan", "Albania", "Algeria", "American Samoa", "Andorra", "Angola", "Anguilla", "Antarctica", "Antigua and Barbuda", "Argentina", "Armenia", "Aruba", "Australia", "Austria", "Azerbaijan", "Bahamas", "Bahrain", "Bangladesh", "Barbados", "Belarus", "Belgium", "Belize", "Benin", "Bermuda", "Bhutan", "Bolivia", "Bosnia and Herzegovina", "Botswana", "Bouvet Island", "Brazil", "Lollapalooza", "British Antarctic Territory", "British Indian Ocean Territory", "British Virgin Islands", "Brunei", "Bulgaria", "Burkina Faso", "Burundi", "Cambodia", "Cameroon", "Canada", "Canton and Enderbury Islands", "Cape Verde", "Cayman Islands", "Central African Republic", "Chad", "Chile", "China", "Christmas Island", "Cocos [Keeling] Islands", "Colombia", "Comoros", "Congo - Brazzaville", "Congo - Kinshasa", "Cook Islands", "Costa Rica", "Croatia", "Cuba", "Cyprus", "Czech Republic", "Côte d’Ivoire", "Denmark", "Djibouti", "Dominica", "Dominican Republic", "Dronning Maud Land", "East Germany", "Ecuador", "Egypt", "El Salvador", "Equatorial Guinea", "Eritrea", "Estonia", "Ethiopia", "Falkland Islands", "Faroe Islands", "Fiji", "Finland", "France", "French Guiana", "French Polynesia", "French Southern Territories", "French Southern and Antarctic Territories", "Gabon", "Gambia", "Georgia", "Germany", "Ghana", "Gibraltar", "Greece", "Greenland", "Grenada", "Guadeloupe", "Guam", "Guatemala", "Guernsey", "Guinea", "Guinea-Bissau", "Guyana", "Haiti", "Heard Island and McDonald Islands", "Honduras", "Hong Kong SAR China", "Hungary", "Iceland", "India", "Indonesia", "Iran", "Iraq", "Ireland", "Isle of Man", "Israel", "Italy", "Jamaica", "Japan", "Jersey", "Johnston Island", "Jordan", "Kazakhstan", "Kenya", "Kiribati", "Kuwait", "Kyrgyzstan", "Laos", "Latvia", "Lebanon", "Lesotho", "Liberia", "Libya", "Liechtenstein", "Lithuania", "Luxembourg", "Macau SAR China", "Macedonia", "Madagascar", "Malawi", "Malaysia", "Maldives", "Mali", "Malta", "Marshall Islands", "Martinique", "M